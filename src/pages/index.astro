---
import "../index.css";

import Education from "../components/Education.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#BBAA77" />

    <meta name="author" content="Nissan Ahmed" />
    <meta name="description" content="Personal portfolio site"/>

    <link rel="icon" href="/favicon.ico" sizes="any" />

    <title>Nissan Ahmed</title>
  </head>

  <body
    class="space-y-4 bg-[url('/assets/patterns/graph-paper.svg')] font-mono font-medium text-gray-900"
  >
    <Hero />

    <main
      class="card space-y-4 bg-[url('/assets/patterns/floating-cogs.svg')] px-8 py-6"
    >
      <Projects />
      <Skills />
      <Education />
    </main>

    <Footer />
  </body>
</html>

<script
  async
  src={import.meta.env.PUBLIC_UMAMI_SCRIPT_URL}
  data-website-id={import.meta.env.PUBLIC_UMAMI_WEBSITE_ID}
></script>
